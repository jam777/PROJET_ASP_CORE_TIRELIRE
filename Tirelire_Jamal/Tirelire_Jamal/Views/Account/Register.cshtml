@model Tirelire_Jamal.ViewModels.RegisterViewModel
<div class="row justify-content-center">   

    <div class="col-md-6">
        <div class="card">
            <header class="card-header">               
                <h4 class="card-title mt-2 text-center">Inscription</h4>
            </header>

            <article class="card-body register">
                <form method="post">

                    @*USERNAME*@
                    <div class="col form-group px-0">
                        <label>UserName</label>
                        <input type="text" name="UserName" class="form-control" placeholder="">
                    </div> <!-- form-group end.// -->
                    @*PASSWORD*@
                    <div class="col form-group px-0">
                        <label>Mot de Passe</label>
                        <input type="password" name="Password" class="form-control" placeholder=" ">
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                    </div> <!-- form-row end.// -->

                    <div class="form-row">
                        @*PRENOM*@
                        <div class="col form-group">
                            <label>Prenom</label>
                            <input type="text" name="Prenom" class="form-control" placeholder="">
                        </div> <!-- form-group end.// -->
                        @*NOM*@
                        <div class="col form-group">
                            <label>Nom</label>
                            <input type="text" name="Nom" class="form-control" placeholder=" ">
                        </div> <!-- form-group end.// -->
                    </div> <!-- form-row end.// -->

                    <div class="form-group">
                        @*EMAIL*@
                        <label>Adresse Email</label>
                        <input type="text" name="Email" class="form-control" placeholder="">
                    </div> <!-- form-group end.// -->                    

                    <div class="form-row">
                        @*BIRTHDAY*@
                        <div class="form-group col-md-6">
                            <label>Date de Naissance</label>
                            <input type="date" name="DateNaissance " class="form-control">
                        </div> <!-- form-group end.// -->
                        @*GENRE*@
                        <div class="form-group col-md-6">
                            <label>Genre</label>
                            <select id="inputState" name="Genre" class="form-control">
                                <option value="true">Homme</option>
                                <option value="false">Femme</option>
                            </select>
                        </div> <!-- form-group end.// -->
                    </div> <!-- form-row.// -->
                    @*TELEPHONE*@
                    <div class="form-group">
                        <label>Téléphone</label>
                        <input type="tel" id="phone" name="Telephone" class="form-control"
                               pattern="[0-9]{2}-[0-9]{2}-[0-9]{2}-[0-9]{2}-[0-9]{2}"
                               required>

                        <small>Format: 01-23-45-67-89</small>
                    </div> <!-- form-group end.// -->
                    @*Adresse de Livraison*@
                    <div class="col form-group px-0">
                        <label>Adresse de Livraison</label>
                        <textarea name="AdresseLivraison" class="form-control" placeholder=""></textarea>
                    </div> <!-- form-group end.// -->
                    @*Adresse de Facturation*@
                    <div class="col form-group px-0">
                        <label>Adresse de Facturation</label>
                        <textarea name="AdresseFacturation" class="form-control" placeholder=" "></textarea>
                    </div> <!-- form-group end.// -->

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block"> Register  </button>
                    </div> <!-- form-group// -->

                </form>
            </article> <!-- card-body end .// -->
            <div class="border-top card-body text-center">Vous avez un compte ? <a href=@Url.Action("Login","Account")>Se Connecter</a></div>
        </div> <!-- card.// -->
    </div> <!-- col.//-->

</div> <!-- row.//-->
