@model IEnumerable<Tirelire_Jamal.Models.Produit>

<div class="bd-example">
    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @for (int i = 0; i < Model.Count(); i++)
            {
                <li data-target="#carouselExampleCaptions" data-slide-to=@i class=""></li>
            }
        </ol>

        <div class="carousel-inner">

            @{ int cpt = 0;}
            @foreach (var prodColor in Model)
            {
                <div class="carousel-item " id=carousse@(cpt ++)>
                    <a href=@Url.Action("Detail","Home",new {id=prodColor.Id})>
                        <img src=@prodColor.Image class="d-block w-100" alt="...">
                    </a>
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@prodColor.Nom</h5>
                    </div>
                </div>

            }

        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>